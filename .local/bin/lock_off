#!/bin/bash
swayidle \
    timeout 10 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' &
swaylock \
	--clock \
	-F \
	--indicator \
	--indicator-radius 100 \
	--indicator-thickness 7 \
	--ring-color B58900 \
	--key-hl-color 2AA198 \
	--line-color 00000000 \
	--inside-color 002B36 \
	--separator-color 00000000 \
	--color 002B36

kill %%
